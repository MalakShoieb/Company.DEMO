@model IEnumerable<USERSdtocs>
@{
    ViewData["Title"] = "Index";
    // string? ViewDataMessage=ViewData["Message"] as string;
  /*   string ViewDataMessage = ViewBag.Message; */ //more flexible => dynamic 
}

<h1>All Employees</h1>
<br />
<br />
<div class=" m-3 list-group-item-info">
    <h4> @TempData["message"]
    </h4>
</div>

<form>
    <div class="">
        <div class="justify-content-sm-between">
            <input  id ="search" placeholder="Search By Name" name="search" class="form-control"

        </div>
        <div class="col-6">
            <input type="submit" class="btn btn-success" value="Search" />
        </div>

    </div>
</form>

<br />
<br />
@if (Model.Count() > 0)
{
    <table class="table table-hover table-responsive">
        <thead>
            <tr>
                <th>ID</th>
                <th>UserName</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Email</th>
                <th>Roles</th>
              
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
             
            </tr>
        </thead>

        <tbody>
            @foreach (var ITEM in Model)
            {
                <tr>
                    
                    <td>@ITEM.Id</td>
                    <td>@ITEM.UserName</td>
                    <td>@ITEM.FirstName</td>
                    <td>@ITEM.LastName</td>
                    <td>@ITEM.Email</td>
                    <td>
                        @foreach(var role in ITEM.Roles)
                        {
							<SPAM>@role</SPAM>
                        }
                    </td>
                   
                  
                    <td>
                        <a asp-action="Details" asp-route-id="@ITEM.Id" class="btn btn-success">Details</a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@ITEM.Id" class="btn btn-warning">Update</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@ITEM.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-info">
        <h4>There are no Users :(</h4>
    </div>
}


