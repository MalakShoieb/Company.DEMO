
@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<h1>All Departments</h1>
<br />
<br />
<a asp-action="Create" asp-controller="Department" class="btn btn-primary" > Create Department</a>

<br />
<br />
@if(Model.Count()>0){
    <table class="table table-hover table-responsive">
        <thead>
            <th>Code</th>
           <th> Name</th>
           <th>Date of Creation</th>
        <th> Details</th>
        <th>Update</th>
        <th> Delete</th>
     </thead>
        <tbody>
            @foreach (var item in Model){
                <tr>
                <td> @item.Code</td>
                <td>@item.Name</td>
                <td>@item.CreateAt</td>
                <td>

                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Details</a>

                </td>
                    <td>
                        <a asp-action="Update" class="btn btn-danger">Update</a>

                    </td>
                    <td>
                        <a asp-action="Delete" class="btn btn-warning">Delete</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>

}else {<div class="mt-4 alert alert-info">

<h4> There is no Departments  :( </h4>
    </div>
}
