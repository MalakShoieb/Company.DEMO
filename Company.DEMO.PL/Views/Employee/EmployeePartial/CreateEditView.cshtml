
@model EmployeeDTO
@inject IDepartmentRepository _repo

@{
    var departmentS = new SelectList(_repo.GetAll() as IEnumerable<Department>,"Id","Name");
}
<div class="my-3">
    <label asp-for="Name" class="col-form-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name"></span>
</div>
<div class="my-3">
    <label asp-for="Age" class="col-form-label"></label>
    <input asp-for="Age" class="form-control" type="number" />
    <span asp-validation-for="Age" class="text-danger"></span>
    </<div>
        <div class="my-3">
            <label asp-for="Email" class="col-form-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class=" text text-danger"></span>
            </<div>
                <div class="my-3">
                    <label asp-for="Salary" class="col-form-label"></label>
                    <input asp-for="Salary" class="form-control" type="number" />
                    <span asp-validation-for="Salary" class="text text-danger"></span>
                    </<div>
                        <div class="my-3">
                            <label asp-for="Phone" class="col-form-label"></label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone"> </span>
                            </<div>
                                <div class="my-3">
                                    <label asp-for="Address" class="col-form-label"></label>
                                    <input asp-for="Address" class="form-control" asp />
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                    </<div>
                                        <div class="my-3">
                                            <label asp-for="StartAt" class="col-form-label"></label>
                                            <input asp-for="StartAt" class="form-control" />

                                            </<div>
                                                <div class="my-3">
                                                    <label asp-for="CreatedAt" class="col-form-label"></label>
                                                    <input asp-for="CreatedAt" class="form-control" />

                                                    </div>
                                                        <div class="my-3">
                                                            <label asp-for="IsActive" class="col-form-label"></label>
                                                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />


                                                            </div>
                                                                <div class="my-3">
                                                                    <label asp-for="IsDeleted" class="col-form-label"></label>
                                                                    <input asp-for="IsDeleted" class="form-check-input" type="checkbox" />
                                                                    </div>



                                                                            <div class="my-3">
                                                                                <label asp-for="DepartmentId" class="col-form-label"></label>
                                                                               <select asp-for="DepartmentId"class="form-control" asp-items="departmentS">
                                                                                   <option value="@null">--select a Department</option>
                                                                               </select>
                                                                                </div>



                                                                                    @section validate
                                                                        {
                                                                            <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
                                                                            <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
                                                                        }
