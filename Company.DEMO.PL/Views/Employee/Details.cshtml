@model Employee
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<br />
<br />

<div >
    <div class="my-3">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control" readonly />
      
    </div>

    <div class="my-3">
        <label asp-for="Age" class="col-form-label"></label>
        <input asp-for="Age" class="form-control" type="number" readonly />
    </div>

    <div class="my-3">
        <label asp-for="Email" class="col-form-label"></label>
        <input asp-for="Email" class="form-control" readonly />
    </div>

    <div class="my-3">
        <label asp-for="Salary" class="col-form-label"></label>
        <input asp-for="Salary" class="form-control" type="number" readonly />
    </div>

    <div class="my-3">
        <label asp-for="Phone" class="col-form-label"></label>
        <input asp-for="Phone" class="form-control" readonly />
    </div>

    <div class="my-3">
        <label asp-for="Address" class="col-form-label"></label>
        <input asp-for="Address" class="form-control" readonly />
    </div>

    <div class="my-3">
        <label asp-for="StartAt" class="col-form-label"></label>
        <input asp-for="StartAt" class="form-control" readonly />
    </div>

    <div class="my-3">
        <label asp-for="CreatedAt" class="col-form-label"></label>
        <input asp-for="CreatedAt" class="form-control" readonly />
    </div>

    <div class="my-3">
        <label asp-for="IsActive" class="col-form-label"></label>
        <input asp-for="IsActive" class="form-check-input" type="checkbox" disabled />
    </div>

    <div class="my-3">
        <label asp-for="IsDeleted" class="col-form-label"></label>
        <input asp-for="IsDeleted" class="form-check-input" type="checkbox" disabled />
    </div>

    <div class="m-3">
        <a asp-action="Edit"  asp-route-id="@Model.Id"class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-light">Back To List</a>
    </div>
</div>


