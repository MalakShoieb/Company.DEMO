 @model List<AddOrRemove>
@{
	Layout = null;
	var RoleId = ViewData["role"] as string;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddorRemove</title>
</head>
<body>
	<form asp-action="AddorRemove" asp-route-RoleId="@RoleId" method="post">
	@for (int i = 0; i < Model.Count; i++)
	{
		<div>
		<input asp-for="@Model[i].IsSelected" />
			<label asp-for="@Model[i].IsSelected">@Model[i].UserName</label>
		</div>

			<input  type="hidden"asp-for="@Model[i].UserName" />
			<input type="hidden" asp-for="@Model[i].UserId" />
	}
	<div class="m-3">
			<input type="submit" value="Update" class="btn btn-danger" />
		<a asp-action="Edit" asp-route-id="@RoleId"  class="btn btn-primary">cancel</a>
			
	</div>
	</form>

</body>
</html>






